<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x47"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/header"
        android:layout_width="@dimen/x12"
        android:layout_height="@dimen/x6"
        android:src="@mipmap/icon_static_config"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/config"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/x10"
        android:gravity="start"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/title_black"
        android:textSize="@dimen/xs16" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/x1"
        app:layout_constraintStart_toStartOf="@id/config"
        app:layout_constraintEnd_toEndOf="@id/config"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grayAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>